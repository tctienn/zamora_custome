{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/apps/**/*",
    "src/**/*.vue",
    "src/common/i18n/**/*.json",
    "src/apps/**/i18n/**/*.json"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "allowJs": true,
    "moduleResolution": "Node",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
